{
  "name": "Yque",
  "description": "Create temporary playlist/ques on youtube",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.googleapis.com; object-src 'self'",
  "permissions": [
    "storage",
    "*://*.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "http://localhost:*/*"
      ],
      "js": [
        "inject.bundle.js"
      ],
      "run_at": "document_end"
    }
  ]
}
